{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "copy_compile_commands",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "Copy-Item",
            "args": [
                "-Path",
                "./build/compile_commands.json",
                "-Destination",
                "./compile_commands.json"
            ],
        },
        {
            "label": "make_build_directory",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "md",
            "args": [
                "-Force",
                "build"
            ],
        },
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "-G",
                "'MinGW Makefiles'",
                "./.."
            ],
            "dependsOn": [
                "make_build_directory"
            ]
        },
        {
            "label": "make",
            "type": "shell",
            "command": "mingw32-make.exe",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "dependsOn": [
                "cmake",
                "copy_compile_commands"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": [
                "make"
            ],
            "problemMatcher": []
        }
    ]
}